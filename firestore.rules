rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read and write their own data
    match /staff/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Add a separate collection for Google Calendar auth that anyone can write to
    match /googleCalendarAuth/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null;
    }
    
    // Appointments can be read by staff and clients involved
    match /appointments/{appointmentId} {
      allow read: if request.auth != null && (
        resource.data.staffId == request.auth.uid || 
        resource.data.clientId == request.auth.uid
      );
      allow write: if request.auth != null && 
        (resource.data.staffId == request.auth.uid || 
         request.resource.data.staffId == request.auth.uid);
    }
    
    // Clients data can be read by any authenticated staff
    match /clients/{clientId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Services can be read by anyone, but only staff can modify
    match /services/{serviceId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
} 