rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Multi-tenant access control - all documents must have tenantId field
    match /{document=**} {
      allow read, write: if request.auth != null && 
        request.auth.token.tid == resource.data.tenantId;
    }
    
    // Allow reading tenant configuration
    match /tenants/{tenantId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        request.auth.token.firebase.sign_in_provider == 'admin';
    }
    
    // Allow authenticated users to read and write their own staff data
    match /staff/{userId} {
      allow read: if request.auth != null && 
        request.auth.token.tid == resource.data.tenantId;
      allow write: if request.auth != null && 
        request.auth.uid == userId &&
        request.auth.token.tid == request.resource.data.tenantId;
    }
    
    // Google Calendar auth collection
    match /googleCalendarAuth/{userId} {
      allow read: if request.auth != null && 
        request.auth.uid == userId &&
        request.auth.token.tid == resource.data.tenantId;
      allow write: if request.auth != null &&
        request.auth.token.tid == request.resource.data.tenantId;
    }
    
    // Appointments - multi-tenant with staff and client access
    match /appointments/{appointmentId} {
      allow read: if request.auth != null && 
        request.auth.token.tid == resource.data.tenantId && (
          resource.data.staffId == request.auth.uid || 
          resource.data.clientId == request.auth.uid
        );
      allow write: if request.auth != null && 
        request.auth.token.tid == request.resource.data.tenantId && (
          resource.data.staffId == request.auth.uid || 
          request.resource.data.staffId == request.auth.uid
        );
    }
    
    // Clients data - multi-tenant with staff access
    match /clients/{clientId} {
      allow read: if request.auth != null && 
        request.auth.token.tid == resource.data.tenantId;
      allow write: if request.auth != null &&
        request.auth.token.tid == request.resource.data.tenantId;
    }
    
    // Services - multi-tenant, readable by all authenticated users
    match /services/{serviceId} {
      allow read: if request.auth != null && 
        request.auth.token.tid == resource.data.tenantId;
      allow write: if request.auth != null &&
        request.auth.token.tid == request.resource.data.tenantId;
    }
  }
} 